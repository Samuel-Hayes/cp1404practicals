BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 36
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_up(int(input_number.text))
            Button:
                text: 'Down'
                on_press: app.handle_down(int(input_number.text))
    Button:
        text: 'Convert m to km'
        font_size: 36
        on_press: app.handle_convert(int(input_number.text))
    Label:
        id: output_label
        text: 'Output'
        font_size: 48
        color: (1, 255, 1, 1)